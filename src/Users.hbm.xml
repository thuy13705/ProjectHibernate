<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Users" table="users" schema="coursesystem">

        <id name="username">
            <column name="username" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="passUser">
            <column name="passUser" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="role">
            <column name="role" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>