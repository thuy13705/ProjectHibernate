<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Teacher" table="teacher" schema="coursesystem">
        <id name="idTeacher">
            <column name="idTeacher" sql-type="varchar(11)" length="11"/>
        </id>
        <property name="nameTeacher">
            <column name="nameTeacher" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="passwordTc">
            <column name="passwordTC" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>